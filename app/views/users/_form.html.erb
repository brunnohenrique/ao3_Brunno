<div class="col-6">
  <%= simple_form_for @user do |f| %>
    <%= f.input :name %>
    <%= f.input :login %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <div class="row mt-2">
      <div class="col-6">
        <%= link_to "Back", users_path, class:"btn btn-secondary" %>
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
