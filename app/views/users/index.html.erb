<h1>Users</h1>

<table class="responsive-table highlight">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Login</th>
      <th scope="col">email</th>
      <th colspan="3" scope="col" class="text-center">actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, i| %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= user.name %></td>
        <td><%= user.login %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "waves-effect waves-light btn-small" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "waves-effect waves-light btn-small" %></td>
        <td><%= link_to 'Destroy', user, {
                                            method: :delete, 
                                            class: "waves-effect waves-light btn-small", 
                                            data: { confirm: 'Are you sure?' }
                                          } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New User', new_user_path, class: "waves-effect waves-blue btn-large" %>
