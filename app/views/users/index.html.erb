<h1>Users</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Login</th>
        <th scope="col">email</th>
        <th colspan="3" scope="col" class="text-center">actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each_with_index do |user, i| %>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td><%= user.name %></td>
          <td><%= user.login %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user, class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to 'Destroy', user, {
                                              method: :delete, 
                                              class: "btn btn-danger btn-sm", 
                                              data: { confirm: 'Are you sure?' }
                                            } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New User', new_user_path, class: "btn btn-lg btn-info" %>
</div>
