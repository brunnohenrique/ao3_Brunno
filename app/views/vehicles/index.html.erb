<h1>Vehicles</h1>

<table class="responsive-table highlight">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Model</th>
      <th scope="col">Manufacture</th>
      <th scope="col">License Plate</th>
      <th scope="col">Model year</th>
      <th scope="col">Manufacture year</th>
      <th scope="col">Fuel type</th>
      <th scope="col">Color</th>
      <th colspan="3" scope="col" class="text-center">actions</th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each_with_index do |vehicle, i| %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.manufacture %></td>
        <td><%= vehicle.license_plate %></td>
        <td><%= vehicle.model_year %></td>
        <td><%= vehicle.manufacture_year %></td>
        <td><%= vehicle.fuel_type %></td>
        <td><%= vehicle.color %></td>
        <td><%= link_to 'Show', vehicle, class: "waves-effect waves-light btn-small" %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle), class: "waves-effect waves-light btn-small" %></td>
        <td><%= link_to 'Destroy', vehicle, {
                                            method: :delete, 
                                            class: "waves-effect waves-light btn-small", 
                                            data: { confirm: 'Are you sure?' }
                                          } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Vehicle', new_vehicle_path, class: "waves-effect waves-light btn-large" %>
